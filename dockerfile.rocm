FROM rocm/dev-ubuntu-24.04:6.2

ARG FACEFUSION_VERSION=master
ENV GRADIO_SERVER_NAME=0.0.0.0
ENV PIP_BREAK_SYSTEM_PACKAGES=1

WORKDIR /facefusion

RUN apt-get update
RUN apt-get install python3.12 -y
RUN apt-get install python-is-python3 -y
RUN apt-get install pip -y
RUN apt-get install git -y
RUN apt-get install curl -y
RUN apt-get install ffmpeg -y

RUN git clone https://github.com/soaska/facefusion-api.git --branch ${FACEFUSION_VERSION} --single-branch .
RUN python install.py --onnxruntime rocm --skip-conda